Scanner in = new Scanner(System.in);
double P, r;

System.out.print("Enter a principal: $");
P = in.nextDouble();

System.out.print("Enter an interest rate (e.g. 1.25): ");
r = in.nextDouble() / 100.0;

System.out.println("Principal: $" + P + ", interest rate: " + r * 100 + "%");

double B = P * (1 + r);
System.out.println("\tAfter one term: $" + B);
B = B * (1 + r);
System.out.println("\tAfter two terms: $" + B);
B = B * (1 + r);
System.out.println("\tAfter three terms: $" + B);
B = B * (1 + r);
System.out.println("\tAfter four terms: $" + B);
B = B * (1 + r);
System.out.println("\tAfter five terms: $" + B);

