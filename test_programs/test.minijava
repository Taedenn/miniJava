Scanner in = new Scanner(System.in);
System.out.print("How much change? $");

int cents = (int) Math.rint(in.nextDouble() * 100);
System.out.println("Change for $" + cents / 100.0 + ":");

int dollars = cents / 100;
cents = cents % 100;

int quarters = cents / 25;
cents = cents % 25;

int dimes = cents / 10;
cents = cents % 10;

int nickels = cents / 5;
cents = cents % 5;

int pennies = cents;

System.out.println("\t" + dollars + " dollars");
System.out.println("\t" + quarters + " quarters");
System.out.println("\t" + dimes + " dimes");
System.out.println("\t" + nickels + " nickels");
System.out.println("\t" + pennies + " pennies");

